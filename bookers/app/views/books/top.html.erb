<h1>Books</h1>
<table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
      </tr>
    <% end %>
  </tbody>
<table>

<h2><strong>New book</strong></h2>
<%= form_with model: Book.new do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>

  <label>Body</label><br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Cleate Book' %>
<% end %>